---
import { getI18n } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18n({ currentLocale });
---

<footer class="flex flex-col -z-10 py-8">
  <div
    class="hero py-4 flex justify-between items-center border border-neutral-600 rounded-md"
  >
    <p class="text-sm opacity-80">
      <span> &copy; 2024 Jeferson Barrero.</span>
      <span>
        {i18n.FOOTER_MSG}
      </span>
    </p>

    <a href="#about" class="text-yellow-100 hover:underline">
      {i18n.FOOTER_LINK}
    </a>
  </div>
</footer>
