---
import Link from "./Link.astro";

export type Props = {
  title: string;
  description: string;
  link: string;
  repo: string;
  class?: string;
};

const { title, description, link, repo } = Astro.props;
---

<article class="card group flex gap-x-6 rounded-2xl p-8 h-[500px] bg-[#212121]">
  <div class="flex flex-col justify-between md:w-2/6 w-full">
    <div class="block gap-y-4">
      <h3 class="text-xl font-semibold text-yellow-200 mb-2">
        {title}
      </h3>
      <p class="mb-4 text-pretty opacity-70" set:text={description} />
    </div>
    <div class="flex gap-4 font-semibold">
      <Link href={repo} variant="link" external>Github</Link>
      <Link href={`/projects/${link}`} variant="link">caso de estudio</Link>
    </div>
  </div>
  <div class="rounded-2xl overflow-hidden flex-1 w-fit h-full">
    <img
      src="/interface.jpg"
      width="500"
      height="500"
      loading="lazy"
      alt={title}
      class="aspect-video size-full object-fill hover:scale-110 ease-in-out transition duration-300"
    />
  </div>
</article>

<style>
  .card {
    animation: linear both reveal;
    animation-range: 5% 30%;
    animation-timeline: view();
  }

  @keyframes reveal {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    50% {
      opacity: 0.1;
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
