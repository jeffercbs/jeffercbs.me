---
import { Icon } from "astro-icon/components";

export type Props = {
  tool: string;
};

const { tool } = Astro.props;
---

<div
  class="flex flex-col justify-center items-center py-6 w-24 h-fit border border-gray-500 rounded-md"
>
  <Icon name={tool} class="size-12" />
  <span class="uppercase pt-4 text-xs opacity-70">{tool}</span>
</div>
