---
import ClientCard from "../Card.astro";
---

<section class="min-h-dvh h-fit relative bg-black" id="web">
  <div class="hero size-full flex flex-col justify-center pt-8">
    <div class="myw-6">
      <h2
        aria-label="web"
        class="text-3xl uppercase text-white/80 font-semibold"
      >
        clientes
      </h2>
    </div>
    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-3 my-6 relative z-20"
      id="clients"
    >
      {
        [
          {
            title: "Sitio web para",
            description: "dkamda damd amda",
            website: "https://argermiroremodelaciones.vercel.app",
          },
          {
            title: "dkamda damd amda",
            description: "dkamda damd amda",
            website: "https://argermiroremodelaciones.vercel.app",
          },
        ].map((client) => <ClientCard {...client} />)
      }
    </div>
  </div>
</section>

<style>
  #web::after {
    content: "";
    @apply bg-gradient-to-t from-neutral-900 via-neutral-900/70 to-transparent inset-0;
    @apply absolute -z-0 size-full;
  }
  .navigation {
    @apply absolute top-1/2 transform -translate-y-1/2 z-20 bg-transparent border-none text-neutral-100 text-2xl;
    @apply cursor-pointer;
  }
  .navigation:nth-child(2) {
    right: 0;
  }
</style>
